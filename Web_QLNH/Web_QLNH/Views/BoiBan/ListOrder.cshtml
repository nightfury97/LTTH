@model List<Web_QLNH.Models.ChiTietDonHang>
    @{ 
        Layout = null;
        int order = 0;
        float tong = 0;
    }

<table id="dataTable" class="table table-striped table-bordered" cellspacing="0" style="width: 100%; table-layout: fixed;">
    <thead>
        <tr style="color:black; background-color:#00bcd4">
            <th style="width:5%">STT</th>
            <th >Tên món</th>
            <th>Ghi chú</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var d in Model)
        {
            int j = 1;
            order = order + j;

            <tr>
                <td style="text-align:center">@order</td>
                <td>@d.MonAn1.ten</td>
                <td>@d.ghichu</td>
                <td>@d.soluong</td>
                <td>@d.MonAn1.gia</td>
                <td>@(d.soluong * d.MonAn1.gia)</td>
                <td>
                    <a class="btn btn-danger btn_del" data-toggle="modal" data-target="#delete" data-id='@d.monan'>
                        <i class="ti-trash"></i> Xóa
                    </a>
                </td>
            </tr>
            { tong += (float)(d.soluong * d.MonAn1.gia); }
        }
        <tr>
            <td style="text-align:center">Tổng</td>
            <td>@tong</td>
            
        </tr>
    </tbody>

</table>